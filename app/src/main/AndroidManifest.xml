<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marijaradisavljevic.restoran" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.ToDoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activiry.EmailPasswordActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activiry.ActivityGUI" >
        </activity>
        <activity android:name=".activiry.Activity_AddMenuItem" >
        </activity>
        <activity android:name=".activiry.ActivityFirst" >
        </activity>
        <activity android:name=".activiry.ActivityLogout" >
        </activity>
    </application>

</manifest>